    if (nums1[i] < nums2[j]) {
        result[idx++] = nums1[i++];
    } else {
        result[idx++] = nums2[j++];
    }
}
while (i < m) result[idx++] = nums1[i++];
while (j < n) result[idx++] = nums2[j++];

// æ‹·è´å› nums1
for (int k = 0; k < m + n; ++k) {
    nums1[k] = result[k];
}
